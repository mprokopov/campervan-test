{% extends 'base.html.twig' %}

{% block title %}Hello StationEquipmentCalendarController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for calendar in calendars %}
    <h2> {{calendar.station.location}}
    from {{calendar.dateRange.start.format('Y-m-d')}}
    to {{calendar.dateRange.end.format('Y-m-d')}} </h2>
    <table>
    {% for day,values in calendar.Calendar.Collection %}
        <tr>
            <td> {{day}} </td>

            {% for equipment in values %}
                <td>
                    <b>{{equipment.equipment.name}}</b>
                    chanaged {{equipment.booked}}
                    available {{equipment.available}}
                </td>
            {% endfor %}
        </tr>
    {% endfor %}
    </table>
{% endfor %}
{% endblock %}
